<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="adj_report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@class='row mt32 mb32']/div[1]" position="replace">
        </xpath>
        <xpath expr="//div[@class='row mt32 mb32']/div[2]" position="after">
 				<div class="col-xs-3">
                    <strong>PO Good Thru Date:</strong>
                    <p t-field="o.po_good_through"/>
                </div>
                <div class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="o.payment_term_id"/>
                </div>
                <div class="col-xs-3">
                    <strong>Ship via:</strong>
                    <p t-field="o.ship_via"/>
                </div>
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//thead//tr//th[1]" position="before">
 				<th><strong>Item</strong></th>
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//thead//tr//th[3]" position="replace">
 				<th><strong>UPC</strong></th>
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//thead//tr//th[4]" position="replace">
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//tbody//tr//td[1]" position="before">
 				<td>
                	<span t-field="line.product_id"/>
                </td>
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//tbody//tr//td[3]" position="replace">
 				<td>
                	<span t-field="line.upc_code"/>
                </td>
        </xpath>
        <xpath expr="//div[@class='page']/table[1]//tbody//tr//td[4]" position="replace">
        </xpath>
    </template>
    
</odoo>
